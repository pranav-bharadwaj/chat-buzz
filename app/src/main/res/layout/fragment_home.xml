<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="50dp"
        android:id="@+id/HomeLayout"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout" >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:rowCount="1"
            android:columnCount="1"


            >
            <androidx.cardview.widget.CardView
                android:minHeight="100dp"
                android:layout_height="135dp"
                android:layout_gravity="top"
                android:background="@drawable/ic_menu_camera"
                app:cardCornerRadius="5sp"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"

                >
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:rowCount="1"
                    android:columnCount="1"
                    android:background="@drawable/honors">
                    <TextView android:layout_gravity="top" android:text="Marvels rockers" android:textSize="20dp" android:textColor="#ffff" android:layout_marginLeft="15dp" android:textFontWeight="700" android:fontFamily="monospace"
                        android:layout_marginTop="10dp" android:textStyle="bold"
                        ></TextView>
                    <TextView android:layout_marginLeft="15dp" android:text="'Students can chat with others and clear their doubts'" android:width="230sp" android:fontFamily="cursive" android:textColor="@android:color/white" android:textFontWeight="600"/>
                    <GridLayout
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:layout_height="19sp"
                            android:src="@drawable/totalmem"  />
                        <TextView
                            android:text="25" android:layout_marginLeft="5dp" android:textColor="@android:color/white" android:textFontWeight="600"/>
                        <ImageView
                            android:layout_height="18dp"
                            android:src="@drawable/createdicon" android:layout_marginLeft="15dp" />
                        <TextView
                            android:text="25-01-2007" android:layout_marginLeft="3dp" android:textColor="@android:color/white" android:textFontWeight="600"/>

                    </GridLayout>
                <TextView
                    android:text="Pranav bharadwaj"
                    android:textFontWeight="400"
                    android:textColor="#ffff"
                    android:fontFamily="sans-serif-thin"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    >
                </TextView>
                </GridLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:minHeight="100dp"
                android:layout_height="135dp"
                android:layout_gravity="top"
                app:cardCornerRadius="5sp"
                android:layout_width="match_parent"

                >
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:rowCount="1"
                    android:columnCount="1"
                    android:background="@drawable/img_volleyball">
                    <TextView android:layout_gravity="top" android:text="Shearlock holmes" android:textSize="20dp" android:textColor="#ffff" android:layout_marginLeft="15dp" android:textFontWeight="700" android:fontFamily="monospace"
                        android:layout_marginTop="10dp" android:textStyle="bold"
                        ></TextView>
                    <TextView android:layout_marginLeft="15dp" android:text="'This is only for movie lovers and chat with anyone'" android:width="230sp" android:fontFamily="cursive" android:textColor="@android:color/white" android:textFontWeight="600"/>
                    <GridLayout
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:layout_height="19sp"
                            android:src="@drawable/totalmem"  />
                        <TextView
                            android:text="25" android:layout_marginLeft="5dp" android:textColor="@android:color/white" android:textFontWeight="600"/>
                        <ImageView
                            android:layout_height="18dp"
                            android:src="@drawable/createdicon" android:layout_marginLeft="15dp" />
                        <TextView
                            android:text="25-01-2007" android:layout_marginLeft="3dp" android:textColor="@android:color/white" android:textFontWeight="600"/>

                    </GridLayout>
                    <TextView
                        android:text="Chandrala pandith"
                        android:textFontWeight="400"
                        android:textColor="#ffff"
                        android:fontFamily="sans-serif-thin"
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="15dp"
                        >
                    </TextView>
                </GridLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>
        <TextView android:layout_height="match_parent"
            android:layout_width="match_parent" android:id="@+id/text_home"></TextView>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>